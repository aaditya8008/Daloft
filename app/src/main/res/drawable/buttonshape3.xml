<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button background for when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button3color" /> <!-- Color when pressed -->
            <corners android:radius="12dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>

    <!-- Default button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button3color" /> <!-- Default background color -->
            <corners android:radius="12dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>

</selector>